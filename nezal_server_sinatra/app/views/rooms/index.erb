<h1>Listing rooms</h1>
<ul>
<% @rooms.each_value do |room| %>
  <li>
    <a href="/rooms/<%=room[:id]%>" > room <%=room[:id]%> | </a>
    <% unless room[:users].has_key? user[:id] %>
      <form id="join_room_<%=room[:id]%>" action="/rooms/<%=room[:id]%>" method="post" style="display:inline">
        <input type="hidden" name="_method" value="put"/>
        <input type="hidden" name="_action" value="add"/>
        <a href="#" onclick="document.getElementById('join_room_<%=room[:id]%>').submit(); return false;">Join</a>
       </form> 
    <% else %>
      You are currently a member of this room
    <% end %>
  </li>
<% end %>
</ul>

<form id="create_room" action="/rooms" method="post">
  <a href="#" onclick="document.getElementById('create_room').submit(); return false;">Create Room</a>
</form>

